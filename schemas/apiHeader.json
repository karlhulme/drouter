{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/karlhulme/drouter/main/schemas/apiHeader.json",
  "title": "OpenAPI header schema.",
  "description": "The type and description of an OpenAPI header.",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "summary": {
      "type": "string"
    },
    "type": {
      "$ref": "https://raw.githubusercontent.com/karlhulme/djsonotron/main/schemas/types.json"
    },
    "isRequired": {
      "type": "boolean"
    },
    "deprecated": {
      "type": "string"
    }
  },
  "required": ["name", "summary", "type"]
}
